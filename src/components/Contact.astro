---
import { Phone, Mail, Globe } from '@lucide/astro';

const contactInfo = [
  {
    icon: Phone,
    label: 'Phone',
    value: '704-264-4578',
    href: 'tel:7042644578',
  },
  {
    icon: Mail,
    label: 'Email',
    value: 'demo@genesis1.tech',
    href: 'mailto:demo@genesis1.tech',
  },
  {
    icon: Globe,
    label: 'Website',
    value: 'genesis1.tech',
    href: 'https://genesis1.tech',
  },
];

const organizationTypes = [
  { value: '', label: 'Select type...' },
  { value: 'campus', label: 'Campus / University' },
  { value: 'city', label: 'City / Municipality' },
  { value: 'business', label: 'Business / Corporate' },
  { value: 'venue', label: 'Venue / Stadium' },
  { value: 'other', label: 'Other' },
];
---

<section id="contact" class="bg-gradient-to-b from-green-50/30 via-emerald-50/20 to-green-50/30 px-6 py-24">
  <div class="mx-auto max-w-7xl">
    <div class="grid gap-12 lg:grid-cols-2">
      <!-- Left: Contact Info -->
      <div class="fade-in-section">
        <h2 class="mb-6 text-3xl font-bold text-gray-900 md:text-4xl">
          Ready to Transform Your Recycling Program?
        </h2>
        <p class="mb-8 text-xl text-gray-700/80">
          Get in touch to schedule a demo and see how Topper Stopperâ„¢ can work for your
          organization.
        </p>

        <div class="space-y-6">
          {
            contactInfo.map(({ icon: Icon, label, value, href }) => (
              <div class="flex items-center gap-4">
                <div class="flex h-12 w-12 items-center justify-center rounded-xl bg-emerald-100/70">
                  <Icon class="h-6 w-6 text-emerald-700" />
                </div>
                <div>
                  <div class="text-sm text-emerald-900/60">{label}</div>
                  <a
                    href={href}
                    target={href.startsWith('http') ? '_blank' : undefined}
                    class="text-lg font-medium text-gray-900 transition-colors hover:text-emerald-800"
                  >
                    {value}
                  </a>
                </div>
              </div>
            ))
          }
        </div>
      </div>

      <!-- Right: Contact Form -->
      <div class="fade-in-section" style="transition-delay: 200ms;">
        <div class="glass-panel rounded-[2rem] p-8">
          <h3 class="mb-6 text-xl font-semibold text-gray-900">Request a Demo</h3>
          <form class="space-y-4">
            <div class="grid gap-4 md:grid-cols-2">
              <div>
                <label class="mb-2 block text-sm font-medium text-emerald-900/80">First Name</label>
                <input
                  type="text"
                  class="w-full rounded-xl border border-emerald-200 bg-white/60 px-4 py-3 outline-none transition-all focus:border-emerald-500 focus:bg-white focus:ring-2 focus:ring-emerald-500/20"
                  placeholder="John"
                />
              </div>
              <div>
                <label class="mb-2 block text-sm font-medium text-emerald-900/80">Last Name</label>
                <input
                  type="text"
                  class="w-full rounded-xl border border-emerald-200 bg-white/60 px-4 py-3 outline-none transition-all focus:border-emerald-500 focus:bg-white focus:ring-2 focus:ring-emerald-500/20"
                  placeholder="Doe"
                />
              </div>
            </div>
            <div>
              <label class="mb-2 block text-sm font-medium text-emerald-900/80">Email</label>
              <input
                type="email"
                class="w-full rounded-xl border border-emerald-200 bg-white/60 px-4 py-3 outline-none transition-all focus:border-emerald-500 focus:bg-white focus:ring-2 focus:ring-emerald-500/20"
                placeholder="john@organization.com"
              />
            </div>
            <div>
              <label class="mb-2 block text-sm font-medium text-emerald-900/80">Organization</label>
              <input
                type="text"
                class="w-full rounded-xl border border-emerald-200 bg-white/60 px-4 py-3 outline-none transition-all focus:border-emerald-500 focus:bg-white focus:ring-2 focus:ring-emerald-500/20"
                placeholder="Your Organization"
              />
            </div>
            <div>
              <label class="mb-2 block text-sm font-medium text-emerald-900/80">Organization Type</label>
              <select
                class="w-full rounded-xl border border-emerald-200 bg-white/60 px-4 py-3 outline-none transition-all focus:border-emerald-500 focus:bg-white focus:ring-2 focus:ring-emerald-500/20"
              >
                {organizationTypes.map(({ value, label }) => <option value={value}>{label}</option>)}
              </select>
            </div>
            <div>
              <label class="mb-2 block text-sm font-medium text-emerald-900/80">Message</label>
              <textarea
                rows="4"
                class="w-full resize-none rounded-xl border border-emerald-200 bg-white/60 px-4 py-3 outline-none transition-all focus:border-emerald-500 focus:bg-white focus:ring-2 focus:ring-emerald-500/20"
                placeholder="Tell us about your recycling challenges..."
              />
            </div>
            <button
              type="submit"
              class="w-full rounded-xl bg-emerald-800 py-4 text-lg font-medium text-white shadow-lg transition-all hover:bg-emerald-900 hover:shadow-xl"
            >
              Submit Request
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

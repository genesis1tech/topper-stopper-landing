---
import { Recycle, Linkedin, Twitter, Instagram } from '@lucide/astro';

const quickLinks = [
  { href: '#how-it-works', label: 'How It Works' },
  { href: '#features', label: 'Features' },
  { href: '#results', label: 'Results' },
  { href: '#contact', label: 'Contact' },
];

const socialLinks = [
  { icon: Linkedin, href: '#', label: 'LinkedIn' },
  { icon: Twitter, href: '#', label: 'Twitter' },
  { icon: Instagram, href: '#', label: 'Instagram' },
];
---

<footer class="bg-gradient-to-t from-emerald-100/50 via-teal-50/30 to-transparent px-6 pb-12">
  <div class="mx-auto max-w-7xl">
    <div class="fade-in-section rounded-[3rem] bg-emerald-900 px-8 py-16 text-white md:px-16">
      <div class="mb-12 text-center">
        <h3 class="mb-4 text-2xl font-bold">Join the Recycling Revolution</h3>
        <p class="mx-auto mb-8 max-w-2xl text-lg text-emerald-200">
          Limited early adopter pricing available. Secure your Topper Stopper™ system today.
        </p>

        <form class="mx-auto flex w-full max-w-xl flex-col gap-4 md:flex-row">
          <input
            type="email"
            placeholder="Enter your email address"
            class="flex-grow rounded-full border-2 border-emerald-700 bg-transparent px-6 py-4 text-lg font-medium text-white placeholder-emerald-400 transition-all focus:border-emerald-500 focus:bg-white/5 focus:outline-none focus:ring-2 focus:ring-emerald-500/50"
          />
          <button
            type="submit"
            class="rounded-full bg-white px-8 py-4 text-lg font-medium text-emerald-800 transition-all hover:scale-105 hover:bg-emerald-50"
          >
            Join Waitlist
          </button>
        </form>
      </div>

      <div class="mb-12 flex flex-col items-center justify-between gap-8 border-t border-emerald-800 pt-12 md:flex-row">
        <!-- Social Links -->
        <div class="flex gap-4">
          {
            socialLinks.map(({ icon: Icon, href, label }) => (
              <a
                href={href}
                aria-label={label}
                class="flex h-10 w-10 items-center justify-center rounded-full bg-emerald-800 transition-colors hover:bg-emerald-700"
              >
                <Icon class="h-5 w-5" />
              </a>
            ))
          }
        </div>

        <!-- Quick Links -->
        <div class="flex flex-wrap items-center justify-center gap-6 text-sm text-emerald-300">
          {
            quickLinks.map(({ href, label }) => (
              <a href={href} class="transition-colors hover:text-white">
                {label}
              </a>
            ))
          }
        </div>

        <!-- Legal -->
        <div class="flex gap-6 text-sm text-emerald-300">
          <a href="#" class="transition-colors hover:text-white">Privacy Policy</a>
          <a href="#" class="transition-colors hover:text-white">Terms of Service</a>
        </div>
      </div>

      <div class="flex flex-col items-center justify-between gap-4 border-t border-emerald-800 pt-8 md:flex-row">
        <div class="flex items-center gap-3">
          <div class="flex h-10 w-10 items-center justify-center rounded-xl bg-emerald-700">
            <Recycle class="h-6 w-6 text-white" />
          </div>
          <span class="text-xl font-semibold">Topper Stopper™</span>
        </div>

        <p class="text-center text-sm text-emerald-400">
          © 2025 Genesis 1 Technologies LLC. All Rights Reserved.
        </p>
      </div>
    </div>
  </div>
</footer>

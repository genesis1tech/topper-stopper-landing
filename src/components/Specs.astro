---
const specs = [
  { label: 'Exterior', value: 'Weather-Resistant PETG Plastic' },
  { label: 'Sensors', value: 'Barcode + ML Detection + Fill Level' },
  { label: 'Processing', value: 'Edge AI Computing (Local Processing)' },
  { label: 'Connectivity', value: 'WiFi 5G / 4G LTE Cellular' },
  { label: 'Privacy', value: 'Enterprise-Grade Local Encryption' },
];

const stats = [
  { value: '0.02s', label: 'Detection Speed' },
  { value: '3 ft', label: 'Scanning Distance' },
  { value: '100%', label: 'Data Secure' },
  { value: '24/7', label: 'Active Monitoring' },
];
---

<section id="specs" class="bg-gradient-to-b from-green-50/30 via-emerald-50/20 to-green-50/30 px-6 py-12">
  <div class="mx-auto max-w-7xl">
    <div class="glass-panel fade-in-section flex flex-col gap-12 rounded-[3rem] p-8 md:p-12 lg:flex-row">
      <!-- Left: Table -->
      <div class="flex flex-col justify-center lg:w-1/2">
        <h3 class="mb-10 text-3xl font-medium tracking-tight text-gray-900 md:text-4xl">
          Product Specifications
        </h3>

        <div class="space-y-6 text-lg">
          {
            specs.map(({ label, value }) => (
              <div class="flex items-baseline justify-between border-b border-emerald-900/10 pb-4">
                <span class="w-1/3 font-semibold text-emerald-900">{label}</span>
                <span class="w-2/3 text-right font-normal text-gray-700/80">{value}</span>
              </div>
            ))
          }
        </div>
      </div>

      <!-- Right: Grid Stats -->
      <div class="grid grid-cols-2 gap-6 lg:w-1/2">
        {
          stats.map(({ value, label }, index) => (
            <div
              class={`flex flex-col items-center justify-center rounded-[2rem] p-8 text-center shadow-inner aspect-square ${
                index === 3 ? 'bg-emerald-900 text-white shadow-xl' : 'bg-emerald-50/60'
              }`}
            >
              <span
                class={`mb-2 text-5xl font-medium tracking-tight ${
                  index === 3 ? 'text-white' : 'text-emerald-800'
                }`}
              >
                {value}
              </span>
              <span class={`text-lg font-medium ${index === 3 ? 'text-emerald-200' : 'text-emerald-700/70'}`}>
                {label}
              </span>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
